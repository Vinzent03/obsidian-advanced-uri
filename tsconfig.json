{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es5",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015",
            "ESNext"
        ],
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}
